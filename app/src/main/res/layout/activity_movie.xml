<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black_background"
    tools:context=".MoviesActivity">


    <TextView
        android:id="@+id/lblmovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:text="Movie"
        android:textColor="@color/greenblue"
        android:textSize="40sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnuser"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="25sp"
        android:layout_toEndOf="@id/lblmovie"
        android:background="@drawable/ic_baseline_person"
        android:padding="10sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recmovielist"
        android:layout_below="@id/lblmovie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        />

</RelativeLayout>